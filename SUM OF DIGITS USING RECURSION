#include<stdio.h>
int sum(int n);
void main()
{
    int n;
    printf("Enter a no:");
    scanf("%d",&n);
    printf("Sum of digits in %d is: %d",n,sum(n));
}
int sum(int n)
{
    int s=0;
    if(n==0)
    return 0;
    while(n>0)
    {
        s=s+n%10;
        n=(n/10);
        sum(n);
    }
    return s;
}
    
