#include<stdio.h>
void main()
{
    int  a[10],n,temp;
    printf("enter size of array:");
    scanf("%d",&n);
    printf("enter numbers in array:");
    for(int i=0;i<n;i++)
        scanf("%d",&a[i]);
    for ( int i = 0; i < n-1; i++)
    {
        for (int j = 0; j < n-i-1; j++)
        {
            if (a[j] > a[j+1])
             {
                temp = a[j];
                a[j] = a[j+1];
                a[j+1] = temp;
             }
        }
    }
    printf("ascending order:");
    for(int i=0;i<n;i++)
        printf(" %d",a[i]);
    printf("\ndecending order:");
    for(int i=n-1;i>=0;i--)
        printf(" %d",a[i]);
}
