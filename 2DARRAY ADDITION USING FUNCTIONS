#include<stdio.h>
void add(int n,int a[3][3],int b[3][3]);
void main()
{
    int n;
    int a[3][3],b[3][3],c[3][3];
    printf("Enter size of array:");
    scanf("%d",&n);
    if(n>0 && n<4)
    {
    printf("enter elements of first array:");
    for(int i=0;i<n;i++)
    for(int j=0;j<n;j++)
    scanf("%d",&a[i][j]);
    printf("enter elements of second array:");
    for(int i=0;i<n;i++)
    for(int j=0;j<n;j++)
    scanf("%d",&b[i][j]);
    printf("===========first array==============\n");
    for(int i=0;i<n;i++)
    {
    for(int j=0;j<n;j++)
    {
    printf("%d ",a[i][j]);
    }
    printf("\n");
    }
    printf("\n===========second array==============\n");
    for(int i=0;i<n;i++)
    {
    for(int j=0;j<n;j++)
    {
    printf("%d ",b[i][j]);
    }
    printf("\n");
    }
    }
    else
    {
        printf("Enter corrert size b/w 0 & 4");
        return;
    }
    add(n,a,b);
}
void add(int n,int a[3][3],int b[3][3])
{
    int c[3][3];
    for(int i=0;i<n;i++)
    for(int j=0;j<n;j++)
    {
        c[i][j]=a[i][j]+b[i][j];
    }
    printf("addition of two array:\n");
    for(int i=0;i<n;i++)
    {
    for(int j=0;j<n;j++)
    {
    printf(" %d",c[i][j]);
    }
    printf("\n");
    }
}
