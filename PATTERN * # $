#include<stdio.h>
void star();
void hash();
void per();
void main()
{
    char s;
    printf("Options:");
    printf("\n*\n#\n$\n");
    printf("Enter option:");
    scanf("%c",&s);
    while(1)
    {
    if(s=='*')
    {
        star();
        break;
    }
    else if(s=='#')
    {
        hash();
        break;
    }
    else if(s=='$')
    {
        per();
    break;
    }
    else
    {
    printf("wrong symbol");
    break;
    }
    }
}
void star()
{
    int a,i;
    printf("Enter no.of rows:");
    scanf("%d",&a);
    for(i=a;i>=1;i--)
    {
        for(int j=0;j<i;j++)
        printf("*");
        printf("\n");
    }
}
void hash()
{
    int a,i;
    printf("Enter no.of rows:");
    scanf("%d",&a);
    for(i=a;i>=1;i--)
    {
        for(int j=0;j<i;j++)
        printf("#");
        printf("\n");
    }
}
void per()
{
    int a,i;
    printf("Enter no.of rows:");
    scanf("%d",&a);
    for(i=a;i>=1;i--)
    {
        for(int j=0;j<i;j++)
        printf("$");
        printf("\n");
    }
}
