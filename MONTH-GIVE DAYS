#include<stdio.h>
void main()
{
    int n;
    while(1)
    {
    printf("Enter month no:");
    scanf("%d",&n);
    if(n==1 || n==3 || n==5 || n==7 || n==8 || n==10 || n==12)
    {
    printf("%d month contains 31 days",n);
    break;
    }
    else if(n==4 || n==6 || n==9 || n==11)
    {
    printf("%d month contains 31 days",n);
    break;
    }
    else if(n==2)
    {
    printf("%d month\nleap year:29 days\tnon-leap year:28 days",n);
    break;
    }
    else
    {
        printf("WRONG INPUT");
        printf("\nEnter month no. b/w 1 and 12\n");
    }
    }
}
